#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#include "scanner.c"

char** createBoard(int M, int N) // allocates memory for board
{

  int i = 0;
  int j = 0;

  char** board = malloc(M * N * sizeof(char*));

  for(i = 0; i < M; i++)
  {
    free(board[i]);
  }
  free(board);

  for(i = 0; i < M; i++)
  {
    for(j = 0; j < N; j++)
    {
      *(board + i*M + N) = "REPLACETHISSTRING";
    }
  }

  for(i = 0; i < M; i++)
  {
    for(j = 0; j < N; j++)
    {
      printf("%s ", *(board + i*M + N));
    }
    printf("\n");
  }

  return board;
}


