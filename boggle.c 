#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#include "scanner.c"

char** createBoard(int M, int N) // allocates memory for board
{

  int i = 0;
  int j = 0;

  char** board = malloc(M * N * sizeof(char*));
  for(i = 0; i < M; i++)
  {
    for(j = 0; j < N; j++)
    {
      *(board + i*M + N) = "test";
    }
  }

  for(i = 0; i < M; i++)
  {
    for(j = 0; j < N; j++)
    {
      printf("%s ", *(board + i*M + N));
    }
    printf("\n");
  }

  return board;
}


int main(void)
{
  int M = 0;
  int N = 0;

  printf("The board size can be M x N where M and N are both integers greater than or equal to 4.\n\n");

  while(M < 4)
  {
    printf("Enter your desired M, where M is a integer greater than or equal to 4: ");
    M = readInt(stdin);
  }

  while(N < 4)
  {
    printf("Enter your desired N, where N is a integer greater than or equal to 4: ");
    N = readInt(stdin);
  }

  printf("\nThe board size will be %d x %d with the board containing %d total cubes.\n", M, N, M*N);

  char** board = createBoard(M, N);
  //char** board = fillBoard(board);

  return 0;
}
